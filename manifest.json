{
    "manifest_version": 3,
    "name": "ReadItForThePlot",
    "version": "1.0.0",
    "description": "Translate text in images directly on any webpage",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles/content.css"],
        "run_at": "document_idle"
      }
    ]
  }
  